<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <!-- Video Player View -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:use_controller="false"
        app:resize_mode="fit"
        app:surface_type="surface_view" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="visible" />

    <!-- Status Text (Top Center) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/status_background_tv"
        android:padding="16dp"
        android:text="Cargando contenido..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Error Text (Center) -->
    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/error_background_tv"
        android:padding="24dp"
        android:text="Error de conexión"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Orientation Toggle Button (Top Right) -->
    <ImageButton
        android:id="@+id/orientationToggleButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/orientation_button_background"
        android:src="@drawable/ic_orientation_horizontal"
        android:contentDescription="Alternar orientación"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:nextFocusDown="@id/orientationToggleButton"
        android:nextFocusUp="@id/orientationToggleButton"
        android:nextFocusLeft="@id/orientationToggleButton"
        android:nextFocusRight="@id/orientationToggleButton" />

    <!-- TV Info Overlay (Bottom Right) -->
    <LinearLayout
        android:id="@+id/tvInfoOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@drawable/info_background_tv"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Content Viewer"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
